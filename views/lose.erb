<div class="text-center">
  <div class="jumbotron bg-danger text-white">
    <h1 class="display-3">Game Over!</h1>
    <h2 class="display-6">Sorry, you lose!</h2>
  </div>
  
  <div class="card border-danger mx-auto" style="max-width: 400px;">
    <div class="card-header bg-danger text-white text-center">
      <h4 class="mb-0">The Word Was</h4>
    </div>
    <div class="card-body text-center">
      <h2 class="text-danger font-weight-bold" style="font-family: 'Courier New', monospace;">
        <%= @game.word.upcase %>
      </h2>
      <p class="text-muted">Better luck next time!</p>
    </div>
  </div>
  
  <%= erb :new %>
</div>


