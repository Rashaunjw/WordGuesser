<% if flash[:message] %>
   <div class="alert alert-danger alert-dismissible fade show" role="alert">
     <strong>Oops!</strong> <%= flash[:message] %>
     <button type="button" class="close" data-dismiss="alert">
       <span>&times;</span>
     </button>
   </div>
<% end %>

<div class="row mb-4">
  <div class="col-md-6">
    <div class="card border-warning">
      <div class="card-header bg-warning text-dark">
        <h5 class="mb-0">Wrong Guesses</h5>
      </div>
      <div class="card-body">
        <h2 class="text-danger font-weight-bold" style="font-family: 'Courier New', monospace; letter-spacing: 0.2em; min-height: 1.5em;">
          <%= @game.wrong_guesses %>
        </h2>
        <div class="mt-3">
          <small class="text-muted">You have <%= 7 - @game.wrong_guesses.length %> guesses left!</small>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="card border-success">
      <div class="card-header bg-success text-white">
        <h5 class="mb-0">Word Progress</h5>
      </div>
      <div class="card-body">
        <h2 class="text-success font-weight-bold" style="font-family: 'Courier New', monospace; letter-spacing: 0.2em; min-height: 1.5em;">
          <%= @game.word_with_guesses %>
        </h2>
        <div class="mt-3">
          <small class="text-muted invisible">Placeholder for alignment</small>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="card border-primary">
  <div class="card-header bg-primary text-white">
    <h5 class="mb-0">Make Your Guess</h5>
  </div>
  <div class="card-body">
    <form action="/guess" method="post">
      <div class="form-group row">
        <label for="guess" class="col-md-3 col-form-label font-weight-bold">Enter a letter:</label>
        <div class="col-md-3">
          <input type="text" name="guess" autocomplete="off" maxlength="1"
                 class="form-control form-control-lg text-center font-weight-bold" 
                 placeholder="A-Z" 
                 inputmode="text"
                 pattern="[a-zA-Z]"
                 title="Enter a single letter"
                 required/>
        </div>
        <div class="col-md-3">
          <button type="submit" class="btn btn-success btn-lg btn-block">
            Guess!
          </button>
        </div>
      </div>
    </form>
  </div>
</div>

<%= erb :new %>
